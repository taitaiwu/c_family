<Window x:Class="WpfApp2___slot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2___slot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Image Name="image1" Width="100" Height="100" MouseDown="image1_MouseDown"></Image>
                <Image Name="image2" Width="100" Height="100" MouseDown="image2_MouseDown"></Image>
                <Image Name="image3" Width="100" Height="100" MouseDown="image3_MouseDown"></Image>
            </StackPanel>
            <Button Name="button1" Content="Start" FontSize="30" Margin="0,10" Click="button1_Click"></Button>
            <Label Name="score_result" Content="Score:" FontSize="30"></Label>
        </StackPanel>
    </Grid>
</Window>
