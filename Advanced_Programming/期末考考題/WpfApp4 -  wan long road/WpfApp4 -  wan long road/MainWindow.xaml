<Window x:Class="WpfApp4____wan_long_road.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4____wan_long_road"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Name="button1" Content="1" FontSize="25" Width="50" Height="50" Click="move_click"></Button>
                <Button Name="button2" Content="2" FontSize="25" Width="50" Height="50"></Button>
                <Button Name="button3" Content="3" FontSize="25" Width="50" Height="50"></Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Name="button4" Content="4" FontSize="25" Width="50" Height="50" Click="move_click"></Button>
                <Button Name="button5" Content="5" FontSize="25" Width="50" Height="50" Click="move_click"></Button>
                <Button Name="button6" Content="6" FontSize="25" Width="50" Height="50" Click="move_click"></Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Name="button7" Content="7" FontSize="25" Width="50" Height="50" Click="move_click"></Button>
                <Button Name="button8" Content="8" FontSize="25" Width="50" Height="50" Click="move_click"></Button>
                <Button Name="button9" FontSize="25" Width="50" Height="50" Click="move_click"></Button>
            </StackPanel>

            <Button Name="start" Content="Start" FontSize="25" Margin="0,20,0,0" Click="start_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
