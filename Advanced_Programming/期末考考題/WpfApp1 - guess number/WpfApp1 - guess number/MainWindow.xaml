<Window x:Class="WpfApp1___guess_number.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1___guess_number"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBox Name="textbox1" Width="150" Height="50" FontSize="40" TextAlignment="Center" MaxLength="4"></TextBox>
                <Button Name="button1" Content="Check" Height="50" FontSize="30" Click="button1_Click"></Button>
            </StackPanel>
            <Label Name="outcome" Content="Result:" FontSize="25"></Label>
            <Label Name="answer" Content="Answer:" FontSize="25"></Label>
        </StackPanel>
    </Grid>
</Window>
