<Window x:Class="WpfApp5___dice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5___dice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Image Name="image1" Width="200" Height="200"></Image>
                <Image Name="image2" Width="200" Height="200" Margin="20,0"></Image>
                <Image Name="image3" Width="200" Height="200"></Image>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                <Label Name="label1" Width="200" FontSize="25" HorizontalContentAlignment="Center"></Label>
                <Label Name="label2" Width="200" FontSize="25" HorizontalContentAlignment="Center" Margin="20,0"></Label>
                <Label Name="label3" Width="200" FontSize="25" HorizontalContentAlignment="Center"></Label>
            </StackPanel>

            <Button Name="dice" Content="Dice" FontSize="30" Width="640" Click="dice_Click"></Button>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBlock Name="game1" Text="A局分數 : " FontSize="30" Width="310" TextAlignment="Center"></TextBlock>
                <TextBlock Name="game2" Text="B局分數 : " FontSize="30" Width="310" TextAlignment="Center" Margin="10,0,0,0"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
