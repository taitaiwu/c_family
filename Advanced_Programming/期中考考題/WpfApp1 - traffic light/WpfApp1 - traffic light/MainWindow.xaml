<Window x:Class="WpfApp1___traffic_light.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1___traffic_light"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400"
        ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Name="label1" Content="紅色" Foreground="Blue" Width="100" Height="100" Background="Red"></Label>
                <Label Name="label2" Content="黃色" Foreground="Blue" Width="100" Height="100" Background="yellow" Margin="10,0,10,0"></Label>
                <Label Name="label3" Content="綠色" Foreground="Blue" Width="100" Height="100" Background="Green"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="left" Width="155" Height="50" Click="direction">
                    <Button.Content>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50">←</TextBlock>
                    </Button.Content>
                </Button>
                <Button x:Name="right"  Width="155" Height="50" Margin="10,0,0,0" Click="direction">
                    <Button.Content>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50">→</TextBlock>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
