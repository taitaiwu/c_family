<Window x:Class="WpfApp2___number_lock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2___number_lock"
        mc:Ignorable="d"
        Title="MainWindow" Height="380" Width="220"
        ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" >
                <TextBox Text="*" Name="textbox1" FontSize="40" Width="50" Height="50" TextAlignment="Center" BorderBrush="Transparent" IsReadOnly="True"></TextBox>
                <TextBox Text="*" Name="textbox2" FontSize="40" Width="50" Height="50" TextAlignment="Center" BorderBrush="Transparent" IsReadOnly="True"></TextBox>
                <TextBox Text="*" Name="textbox3" FontSize="40" Width="50" Height="50" TextAlignment="Center" BorderBrush="Transparent" IsReadOnly="True"></TextBox>
                <TextBox Text="*" Name="textbox4" FontSize="40" Width="50" Height="50" TextAlignment="Center" BorderBrush="Transparent" IsReadOnly="True"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="1" Width="60" Height="60" FontSize="45" Click="num_click"></Button>
                <Button Content="2" Width="60" Height="60" FontSize="45" Margin="10,0,0,0" Click="num_click"></Button>
                <Button Content="3" Width="60" Height="60" FontSize="45" Margin="10,0,0,0" Click="num_click"></Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="4" Width="60" Height="60" FontSize="45" Click="num_click"></Button>
                <Button Content="5" Width="60" Height="60" FontSize="45" Margin="10,0,0,0" Click="num_click"></Button>
                <Button Content="6" Width="60" Height="60" FontSize="45" Margin="10,0,0,0" Click="num_click"></Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="7" Width="60" Height="60" FontSize="45" Click="num_click"></Button>
                <Button Content="8" Width="60" Height="60" FontSize="45" Margin="10,0,0,0" Click="num_click"></Button>
                <Button Content="9" Width="60" Height="60" FontSize="45" Margin="10,0,0,0" Click="num_click"></Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="←" Width="60" Height="60" FontSize="45" Click="back_click"></Button>
                <Button Content="0" Width="60" Height="60" FontSize="45" Margin="10,0,0,0" Click="num_click"></Button>
                <Button Content="AC" Width="60" Height="60" FontSize="40" Margin="10,0,0,0" Click="clear_click"></Button>
            </StackPanel>

            <Label Content="預設密碼:0520" HorizontalContentAlignment="Center"></Label>
        </StackPanel>

        <Label Name="outcome" Content="" Width="200" FontSize="30" Foreground="Black" Background="Transparent" HorizontalContentAlignment="Center" Height="50" Margin="0,0,0,300"></Label>
    </Grid>
</Window>
