<Window x:Class="Homework4___booking_system.Choose_seat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework4___booking_system"
        mc:Ignorable="d"
        Title="Choose_seat" Height="600" Width="800"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Height="120" Background="#caf5fe" VerticalAlignment="Center">
                    <Label Name="title" FontSize="40"  Width="500" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"></Label>
                    <Label Name="seat_num"  Width="500" FontSize="20"></Label>
                </StackPanel>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Background="#e8feca" Height="120">
                    <Label Name="time" Content="🕑" FontSize="20" Width="300" VerticalAlignment="Center"></Label>
                    <Label Content="🏬 金門大學店"  FontSize="20" Width="300" VerticalAlignment="Center"></Label>
                    <Label Name="room" Content="📽️" FontSize="20" Width="300" VerticalAlignment="Center"></Label>
                </StackPanel>
            </StackPanel>

            <Label Background="Brown" Margin="0,0,0,10" Height="5"></Label>
            <Label Content="螢幕 Screen" HorizontalAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="1" Width="660"></Label>

            <StackPanel Name="seat" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"></StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="cancel" Content="取消選位" FontSize="25" Click="cancel_Click"></Button>
                <Button Name="again" Content="全部重選" FontSize="25" Margin="30,0,0,0" Click="again_Click"></Button>
                <Button Name="sent" Content="選好送出" FontSize="25" Margin="30,0,0,0" Click="sent_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
